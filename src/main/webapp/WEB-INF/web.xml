<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description>Servlet che gestisce la login dell'utente</description>
  	<servlet-class>it.iftsrizzoli.gestionestudenti.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<display-name>LogoutServlet</display-name>
  	<description>Questa servlet gestisce il logout dalla applicazione</description>
  	<servlet-class>it.iftsrizzoli.gestionestudenti.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddStudenteServlet</servlet-name>
  	<display-name>AddStudenteServlet</display-name>
  	<description>Questa servlet ricava i dati inviati dalla form di inserimento ed invoca il Model Layer</description>
  	<servlet-class>it.iftsrizzoli.gestionestudenti.controller.AddStudenteServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListStudentiServlet</servlet-name>
  	<display-name>ListStudentiServlet</display-name>
  	<description>Questa servlet consente di ottenere la lista degli Studenti inseriti</description>
  	<servlet-class>it.iftsrizzoli.gestionestudenti.controller.ListStudentiServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListaStudentiJson</servlet-name>
  	<display-name>ListaStudentiJson</display-name>
  	<description></description>
  	<servlet-class>it.iftsrizzoli.gestionestudenti.controller.ListaStudentiJson</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddStudenteServlet</servlet-name>
  	<url-pattern>/Add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ListStudentiServlet</servlet-name>
  	<url-pattern>/listStudenti</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ListaStudentiJson</servlet-name>
  	<url-pattern>/ListaStudentiJson</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>
</web-app>
